Center-Aligned Star Triangle

#include<stdio.h>
int main(){
   int i,j,n,k=0;
   printf("Enter the number of rows\n");
   scanf("%d",&n);
   i=1;
   while(i<=n){
      j=n;
      while(j>i){
         printf(" ");
         j--;
      }
      k=1;
      while(k<=i){
         printf("* ");
         k++;
      }
      printf("\n");
      i++;
   
      }
   return 0;
   }
